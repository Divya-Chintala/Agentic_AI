import pandas as pd
import matplotlib.pyplot as plt

# Load the CSV file into a DataFrame
file_path = 'data.csv'  # Replace with your CSV file name
data = pd.read_csv(file_path)

# Calculate and print distribution statistics for numerical columns
print("Distribution Statistics:")
print(data.describe())

# Plot histograms for each numerical column
for column in data.select_dtypes(include=['float', 'int']).columns:
    plt.figure(figsize=(8, 6))
    plt.hist(data[column], bins=30, edgecolor='black')
    plt.title(f'Distribution of {column}')
    plt.xlabel(column)
    plt.ylabel('Frequency')
    plt.grid(True)
    plt.savefig(f'{column}_distribution.png')
    plt.close()

print("Histograms saved as images for each numerical column.")
