import pandas as pd
import matplotlib.pyplot as plt

# Step 1: Read the data file to check for column names
data = pd.read_csv('data.csv')

# Step 2: Count occurrences of each type of flower assuming the types are in a column named 'flower_type'
flower_counts = data['flower_type'].value_counts()

# Step 3: Create a bar chart to represent the data
plt.figure(figsize=(10, 6))
flower_counts.plot(kind='bar', color='skyblue')
plt.title('Types of Flowers')
plt.xlabel('Flower Type')
plt.ylabel('Count')
plt.xticks(rotation=45)
plt.tight_layout()

# Step 4: Save the plot as "output.png"
plt.savefig('output.png')

print("The graph of types of flowers has been created and saved as 'output.png'.")
